{
  "name": "carbonoz-solarautopilot",
  "version": "1.1.0",
  "description": "CARBONOZ SolarAutopilot - AI Battery Charging Engine for Home Assistant",
  "main": "server.js",
  "scripts": {
    "start": "node start-optimized.js",
    "start-dev": "NODE_ENV=development node start-optimized.js",
    "start-basic": "node server.js",
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "node server.js",
    "dev:frontend": "cd frontend && npm run dev"
  },
  "dependencies": {
    "async-retry": "^1.3.3",
    "axios": "^1.7.7",
    "body-parser": "^1.19.0",
    "concurrently": "^8.2.2",
    "cors": "^2.8.5",
    "date-fns": "^3.6.0",
    "ejs": "^3.1.10",
    "exponential-backoff": "^3.1.1",
    "express": "^4.21.2",
    "express-rate-limit": "^7.5.0",
    "express-session": "^1.18.1",
    "follow-redirects": "^1.15.6",
    "helmet": "^8.0.0",
    "http-proxy-middleware": "^3.0.5",
    "influx": "^5.9.3",
    "moment-timezone": "^0.5.48",
    "mqtt": "^4.2.8",
    "node-cron": "^3.0.3",
    "session-file-store": "^1.5.0",
    "ws": "^8.2.3"
  },
  "keywords": [
    "solar",
    "battery",
    "ai",
    "machine-learning",
    "energy-management",
    "home-assistant",
    "mqtt",
    "influxdb",
    "tibber",
    "dynamic-pricing",
    "reinforcement-learning",
    "pattern-recognition",
    "solar-forecasting",
    "load-prediction"
  ],
  "author": "CARBONOZ",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/carbonoz/solarautopilot"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "config": {
    "memory": {
      "maxHeapSize": "512m",
      "gcInterval": 100,
      "optimizeForSize": true
    }
  }
}
